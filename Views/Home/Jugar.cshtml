<main class = "fondo">
    
    <div class="containerTarjeta">
    <p class = "ptos">@Juego.Username tienes @ViewBag.PuntajeActual puntos</p>
        <h1>PREGUNTADOS</h1>
        <div class="pregunta">
            <img src="@ViewBag.PreguntaActual.Foto" alt="Imagen de la Pregunta" />
            <p>@ViewBag.PreguntaActual.Enunciado</p>
        </div>
        <form method="post" action='@Url.Action("VerificarRespuesta", "Home")'>
            <input type="hidden" name="idPregunta" value="@ViewBag.PreguntaActual.IdPregunta" />
            <ul class="opciones">
                @foreach (Respuestas respuesta in ViewBag.DatosRespuestas)
                {
                    <li class="form-check">
                        <input class="form-check-input" type="radio" id="respuesta_@respuesta.IdRespuesta" name="idRespuesta" value="@respuesta.IdRespuesta" />
                        <label class="form-check-label" for="respuesta_@respuesta.IdRespuesta">
                            @respuesta.Contenido
                        </label>
                    </li>
                }
            </ul>
            <button type="submit" class="btn btn-primary">Verificar!</button>
        </form>
    </div>
</main>

